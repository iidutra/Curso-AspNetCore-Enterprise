@using NSE.WebApp.MVC.Extensions
@inject IUser AppUser

<ul class="navbar-nav">
    @if (AppUser.EstaAutenticado())
    {
        <li class="nav-item">
            <a class="nav-link text-black-50" title="Manage">Olá @AppUser.ObterUserEmail()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-primary" asp-controller="Identidade" asp-action="Logout">Sair</a>
        </li>
    }
    else
    {
        <li class="nav-item" style="padding-right:30px;">
            <a class="btn btn-success" asp-controller="Identidade" asp-action="Registro">Crie sua conta</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Identidade" asp-action="Login">Login</a>
        </li>
    }
</ul>